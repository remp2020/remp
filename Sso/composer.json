{
    "name": "remp/sso",
    "description": "REMP SSO",
    "keywords": ["remp", "sso"],
    "license": "MIT",
    "type": "project",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../Composer/laravel-widgets",
            "options": {
                "symlink": false
            }
        },
        {
            "type": "path",
            "url": "../Composer/laravel-helpers",
            "options": {
                "symlink": false
            }
        }
    ],
    "require": {
        "php": "^7.0.0",
        "arrilot/laravel-widgets": "^3.7",
        "barryvdh/laravel-ide-helper": "^2.3",
        "doctrine/dbal": "~2.3",
        "laravel/framework": "5.4.*",
        "laravel/tinker": "~1.0",
        "laravelcollective/html": "^5.4",
        "yajra/laravel-datatables-oracle": "^7.2",
        "rigor789/airbrake-laravel": "dev-master",
        "laracasts/flash": "^3.0",
        "laravel/socialite": "^3.0",
        "tymon/jwt-auth": "^0.5",
        "league/uri": "^5.0",
        "recca0120/laravel-tracy": "^1.8",
        "predis/predis": " ~1.0",
        "remp/laravel-widgets": "*",
        "remp/laravel-helpers": "*",
        "deployer/deployer": "^6.0",
        "deployer/recipes": "^6.0"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7",
        "friendsofphp/php-cs-fixer": "*",
        "php-amqplib/php-amqplib": "^2.7"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
