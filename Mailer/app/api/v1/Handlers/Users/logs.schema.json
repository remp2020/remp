{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Returns filtered logs",
  "type": "object",
  "$id": "POST /api/v1/mailers/logs-for-email",
  "title": "Logs",
  "required": ["email"],
  "examples": [
    {
      "filter": {
        "dropped_at": {},
        "delivered_at": {
          "to": "2020-04-07T13:33:44+02:00"
        },
        "spam_complained_at": {
          "from": "2020-04-07T13:33:44+02:00"
        },
        "hard_bounced_at": {
          "from": "2020-04-07T13:33:44+02:00",
          "to": "2020-06-07T13:33:44+02:00"
        }
      },
      "page": 1,
      "limit": 3,
      "email": "test@test.com",
      "mail_template_ids": [1,2,3]
    }
  ],
  "dependencies": {
    "page": ["limit"]
  },
  "additionalProperties": false,
  "properties": {
    "filter": {
      "type": "object",
      "title": "Advanced logs filter",
      "description": "Apply filter on logs results",
      "properties": {
        "sent_at": {
          "title": "Sent at filter",
          "$ref": "#/definitions/date-filter"
        },
        "delivered_at": {
          "title": "Delivered at filter",
          "$ref": "#/definitions/date-filter"
        },
        "clicked_at": {
          "title": "Clicked at filter",
          "$ref": "#/definitions/date-filter"
        },
        "opened_at": {
          "title": "Opened at filter",
          "$ref": "#/definitions/date-filter"
        },
        "dropped_at": {
          "title": "Dropped at filter",
          "$ref": "#/definitions/date-filter"
        },
        "spam_complained_at": {
          "title": "Spam complained at filter",
          "$ref": "#/definitions/date-filter"
        },
        "hard_bounced_at": {
          "title": "Hard bounced at filter",
          "$ref": "#/definitions/date-filter"
        }
      },
      "additionalProperties": false
    },
    "limit": {
      "type": "integer"
    },
    "page": {
      "type": "integer"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "mail_template_ids": {
      "type": "array",
      "title": "Mail template ids",
      "items": {
        "type": "integer"
      }
    }
  },
  "definitions": {
    "date-filter": {
      "type": "object",
      "properties": {
        "from": {
          "title": "From filter",
          "type": "string",
          "format": "date-time"
        },
        "to": {
          "title": "To filter",
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    }
  }
}